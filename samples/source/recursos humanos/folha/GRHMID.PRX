    If Val(cAnoAt)<50
	cCpAnoAt:="20"
    Else
	cCpAnoAt:="19"
    EndIf

    If cCpAnoAt+RD_DATARQ>cCpAnoF+cAnoF+cMesF
	Exit
    EndIf

    dbSelectArea("SRA")
    dbSeek(SRD->RD_FILIAL+SRD->RD_MAT) // Pos.Funcionarios p/obter C.C.
    cCCusto:=SRA->RA_CC
    
