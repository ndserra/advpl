	dbSelectArea("SRD")
	While SRA->RA_FILIAL+SRA->RA_MAT==SRD->RD_FILIAL+SRD->RD_MAT
	    dbSkip()
	EndDo
	Loop
    EndIf
    dbSelectArea("SRD")
    
